<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView.Light</item>
        <item name="android:textColorPrimary">@color/mirage</item>
        <item name="android:textColorSecondary">@color/mirage</item>
        <item name="alternativeTextColor">@color/battleship_gray</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog.Light</item>
        <item name="searchViewBackground">@drawable/searchview_background_light</item>
        <item name="filterImageButtonBackground">@drawable/filter_image_button_background_light</item>
        <item name="verticalLineInSearchView">@color/cotton_seed</item>
        <item name="searchViewBackgroundForEpisodesFragment">@drawable/searchview_background_for_episodes_light</item>
    </style>

    <!-- MaterialAlertDialog Design Light -->
    <style name="ThemeOverlay.App.MaterialAlertDialog.Light" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/liver</item>
        <item name="colorSecondary">@color/eastern_blue</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/mirage</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="android:textSize">18sp</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--Edge to Edge, transparent system ui -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
</resources>