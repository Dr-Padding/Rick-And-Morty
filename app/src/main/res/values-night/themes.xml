<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/mirage</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView.Dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="alternativeTextColor">@color/shuttle_gray</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog.Dark</item>
        <item name="searchViewBackground">@drawable/searchview_background_dark</item>
        <item name="filterImageButtonBackground">@drawable/filter_image_button_background_dark</item>
        <item name="verticalLineInSearchView">@color/shuttle_gray</item>
        <item name="searchViewBackgroundForEpisodesFragment">@drawable/searchview_background_for_episodes_dark</item>
        <item name="alivePersonageStatusTextColor">@color/zombie_green</item>
    </style>

    <!-- MaterialAlertDialog Design Dark -->
    <style name="ThemeOverlay.App.MaterialAlertDialog.Dark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/eastern_blue</item>
        <item name="colorSurface">@color/firefly</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App.Dark</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text.Dark</item>
        <item name="android:textSize">18sp</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.Dark</item>
    </style>

</resources>